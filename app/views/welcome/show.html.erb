<ul>
  <li class="no-bullet">
  </li>
</ul>

<div class="row clearfix">
  <div class="small-3 columns left">
    <h1><%= @timeline.title%></h1>
    <h3 class=""><%= @timeline.description %></h3>
    <p>
      <% if @timeline.personal == true%>
        private
       <% else %>
        public
       <% end%>
    </p>
  </div>

  <div class="small-6 columns center pad-vert">
    <div id="expand-event" name="welcome">
      <div class="post-it-placeholder">
        <p>

        </p>
      </div>
    </div>
  </div>

  <div class="small-3 columns right">
    <h4>Timeline Options:</h4>
    <div>
      <a href="#" class="button tiny update-butt">Share with Users</a>
    </div>

    <div>
      <a href="#" class="button tiny update-butt">Join Timeline</a>
    </div>

    <div>
      <a href="#" class="button tiny update-butt">Update</a>
    </div>

    <div>
      <a href="#" class="button tiny update-butt">Delete</a>
    </div>

    <div>
      <h5>Filter Events by Team Tag:</h5>
      <%= select_tag 'team_tag', options_for_select([["none", "none"], ["Dev", "dev"], ["Test", "test"], ["Q/A", "qa"], ["Release", "release"], ["R&D", "rd"]]), onchange: "filterTag(this)"  %>
    </div>

  </div>
</div>



<div class="row clearfix">
  <div id="timelineNonDate"></div>
  <div class="row">
    <div class="large-4 columns">
      <p>
      </p>
    </div>
    <div class="large-4 columns text-center">
      <div>
        <a href="#" class="button tiny update-butt">Add Event</a>
      </div>
    </div>
    <div class="large-4 columns">
      <p>
      </p>
    </div>
  </div>
</div>



<script type="text/javascript">
  var events_stuff = gon.events

  TimeKnots.draw("#timelineNonDate", events_stuff,  {color: "#F2C66D", width:1000, showLabels: true});
</script>
